---
import Layout from "@/layouts/Layout.astro";
import Footer from "@/components/Footer.astro";
import Navbar from "@/components/Navbar.astro";
import MobileMenu from "@/components/MobileMenu.astro";
import MobileHeader from "@/components/MobileHeader.astro";
import ContactForm from "@/components/ContactForm.astro";
---

<Layout title="Dulces Remedios" description="Contacta con nosotros">
    <main>
        <Navbar />
        <MobileHeader />

        <div
            class="flex flex-col md:flex-row md:mt-64 lg:w-[960px] mx-auto gap-8 px-12 py-8"
        >
            <div class="flex-1">
                <ContactForm />
            </div>
            <!--contact info -->
            <div class="flex flex-col gap-4 flex-1 mx-auto max-w-md w-full text-right">
                <p class="text-main-brown font-thin font-[quicksand]">
                    Teléfono: <a
                        href="tel:663183931"
                        class="text-main-brown font-bold">+34 663183931</a
                    >
                </p>
                <p class="text-main-brown font-thin font-[quicksand]">
                    Email: <a
                        href="mailto:contacto@dulcesremedios.es"
                        class="text-main-brown font-bold"
                        >contacto@dulcesremedios.es</a
                    >
                </p>
                <p class="text-main-brown font-thin font-[quicksand]">
                    Whatsapp: <a
                        href="https://wa.me/34663183931"
                        class="text-emerald-600 font-bold">Iniciar chat</a
                    >
                </p>
                <p class="text-main-brown font-thin font-[quicksand]">
                    Facebook: <a
                        href="https://www.facebook.com/dulcesconremedios"
                        class="text-sky-600 font-bold">Visitanos y conoce más</a
                    >
                </p>
                <p class="text-main-brown font-thin font-[quicksand]">
                    Instagram: <a
                        href="https://www.instagram.com/dulcesconremedios"
                        class="text-orange-500 font-bold"
                        >Visitanos para ver más fotos</a
                    >
                </p>
                <p class="text-main-brown font-thin font-[quicksand]">
                    Marqués de Aracena, 94
                </p>
                <p class="text-main-brown font-thin font-[quicksand]">
                    El Repilado (21360) <a
                        href="tel:663183931"
                        class="text-main-brown font-bold">+34 663183931</a
                    >
                </p>
            </div>
        </div>
    </main>
    <Footer />
    <MobileMenu />
</Layout>
