---
interface Props {
    href?: string
    titulo: string
    excerpt: string
    cover: string
}

const { href, titulo, excerpt, cover } = Astro.props
---

<div class="w-full h-36 md:h-72 md:w-1/3 lg:w-1/5">
  <div class="flex h-36 md:h-full w-full flex-row md:flex-col rounded-lg bg-white shadow-md md:shadow-[0_2px_15px_-3px_rgba(0,0,0,0.07),0_10px_20px_-2px_rgba(0,0,0,0.04)]" >

    <div class="rounded-l-lg md:rounded-bl-none md:rounded-t-lg w-2/6 md:w-auto h-36 md:h-56 overflow-hidden bg-slate-100">
      <img class="w-full" src={cover} alt="" />
    </div>

    <div class="p-4 md:h-48 w-full md:w-auto text-ellipsis ... overflow-hidden flex-col mb-4 text-pretty">
      <h5 class="mb-2 text-xl font-medium leading-tight text-neutral-800 dark:text-neutral-50" >
        {titulo}
      </h5>
      <p class="mb-1 text-sm text-neutral-600 dark:text-neutral-200 h-full text-ellipsis overflow-hidden ... pb-4">
        {excerpt}
      </p>
    </div>
  </div>
</div>
