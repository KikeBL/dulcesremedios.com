---
interface Props {
    bg?: string;
    title: string;
    info: string;
}

const { bg, title, info } = Astro.props
---
    <section class={`
            text-zinc-800 font-[quicksand] font-thin py-8 px-12 w-full text-lg flex bg-${bg}
            `}>
        <article class="flex flex-col md:flex-row gap-4 md:gap-20 text-lg mt-4 mx-auto group w-5/6 md:w-auto ">

            <slot name="before"/>
            
            <div class="flex flex-col md:w-80">
                <h3 class="font-[quicksand] text-3xl text-main-brown mb-4">{title}</h3>
                <p class="text-pretty">{info}</p>
            </div>

            <slot name="after"/>
        </article>
    </section>